#!/usr/bin/env bash
# IFS


while IFS=':' read -ar abissa1 abissa2 abissa3 abissa4 abissa5 abissa6 abissa7; do
    echo "The user $abissa1 is part of the $abissa4 gang, lives in $abissa6 and rides $abissa7. $abissa3 place is protected by the passcode $abissa2, more info about the user here: $abissa5"
done < /etc/passwd
